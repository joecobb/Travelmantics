<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/text_margin_small"
        android:foreground="?attr/selectableItemBackground"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:focusable="true">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:textSize="@dimen/title_large"
            android:text="title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/text_margin_standard"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/text_margin_standard"
            app:layout_constraintStart_toEndOf="@+id/imageDeal" android:layout_marginTop="@dimen/text_margin_standard"/>
    <ImageView
            android:layout_width="100dp"
            android:src="@drawable/placeholder"
            android:layout_height="100dp"
            android:id="@+id/imageDeal" android:layout_marginTop="@dimen/text_margin_standard"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/text_margin_standard" android:layout_marginBottom="@dimen/text_margin_standard"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:layout_marginTop="@dimen/text_margin_standard"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintStart_toEndOf="@+id/imageDeal"
            android:layout_marginStart="@dimen/text_margin_standard" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/text_margin_standard"/>
    <TextView
            android:text="100"
            android:textSize="@dimen/text_price"
            android:layout_marginTop="@dimen/text_margin_standard"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:id="@+id/tvPrice" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/text_margin_standard"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" android:layout_marginBottom="@dimen/text_margin_standard"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>